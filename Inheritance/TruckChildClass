pragma solidity ^0.8.0;
import "./Base.sol";

contract Truck is Vehicle {
    uint numberOfWheels;

    constructor(string memory _brand, uint _numOfWheels) Vehicle(_brand) {
        numberOfWheels = _numOfWheels;
    }

    function description() public pure override returns (string memory) {
        return "Hi I am a Truck - CHILD CLASS";
    }
}
